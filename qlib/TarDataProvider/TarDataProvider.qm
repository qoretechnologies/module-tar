# minimum required Qore version
%requires qore >= 2.0

%requires(reexport) DataProvider
%requires Mime
%requires tar

%new-style
%strict-args
%require-types
%enable-all-warnings

module TarDataProvider {
    version = "1.0";
    desc = "user module providing a data provider API for TAR archives";
    author = "Qore Technologies, s.r.o.";
    url = "https://github.com/qorelanguage/module-tar";
    license = "MIT";
    init = sub () {
        # Register the data provider factory
        DataProvider::registerFactory(new TarDataProviderFactory());

        # Register the data provider application
        DataProviderActionCatalog::registerApp(<DataProviderAppInfo>{
            "name": TarDataProvider::AppName,
            "display_name": "TAR Archives",
            "short_desc": "TAR archive operations",
            "desc": "Create, extract, and manage TAR archives with support for gzip, bzip2, xz, and zstd compression",
            "logo": TarLogo,
            "logo_file_name": "tar-logo.svg",
            "logo_mime_type": MimeTypeSvg,
        });

        # Register actions
        DataProviderActionCatalog::registerAction(<DataProviderActionInfo>{
            "app": TarDataProvider::AppName,
            "path": "/archive/create",
            "action": "create-archive",
            "display_name": "Create Archive",
            "short_desc": "Create a new tar archive",
            "desc": "Create a new tar archive from files, directories, or binary data",
            "action_code": DPAT_API,
        });

        DataProviderActionCatalog::registerAction(<DataProviderActionInfo>{
            "app": TarDataProvider::AppName,
            "path": "/archive/extract",
            "action": "extract-archive",
            "display_name": "Extract Archive",
            "short_desc": "Extract a tar archive",
            "desc": "Extract all contents of a tar archive to a destination directory",
            "action_code": DPAT_API,
        });

        DataProviderActionCatalog::registerAction(<DataProviderActionInfo>{
            "app": TarDataProvider::AppName,
            "path": "/archive/list",
            "action": "list-archive",
            "display_name": "List Archive Contents",
            "short_desc": "List files in a tar archive",
            "desc": "Get a list of all entries in a tar archive with metadata",
            "action_code": DPAT_API,
        });

        DataProviderActionCatalog::registerAction(<DataProviderActionInfo>{
            "app": TarDataProvider::AppName,
            "path": "/archive/info",
            "action": "get-archive-info",
            "display_name": "Get Archive Info",
            "short_desc": "Get tar archive metadata",
            "desc": "Get metadata and statistics about a tar archive",
            "action_code": DPAT_API,
        });

        DataProviderActionCatalog::registerAction(<DataProviderActionInfo>{
            "app": TarDataProvider::AppName,
            "path": "/archive/add",
            "action": "add-files",
            "display_name": "Add Files to Archive",
            "short_desc": "Add files to an existing archive",
            "desc": "Add new files or update existing files in a tar archive",
            "action_code": DPAT_API,
        });

        DataProviderActionCatalog::registerAction(<DataProviderActionInfo>{
            "app": TarDataProvider::AppName,
            "path": "/file/extract",
            "action": "extract-file",
            "display_name": "Extract Single File",
            "short_desc": "Extract one file from archive",
            "desc": "Extract a single file from a tar archive to memory or disk",
            "action_code": DPAT_API,
        });

        DataProviderActionCatalog::registerAction(<DataProviderActionInfo>{
            "app": TarDataProvider::AppName,
            "path": "/file/read",
            "action": "read-file",
            "display_name": "Read File Content",
            "short_desc": "Read file without extracting",
            "desc": "Read the contents of a file from a tar archive without extracting to disk",
            "action_code": DPAT_API,
        });

        DataProviderActionCatalog::registerAction(<DataProviderActionInfo>{
            "app": TarDataProvider::AppName,
            "path": "/data/compress",
            "action": "compress-data",
            "display_name": "Compress Data",
            "short_desc": "Compress data to tar format",
            "desc": "Compress binary data or files into an in-memory tar archive",
            "action_code": DPAT_API,
        });

        DataProviderActionCatalog::registerAction(<DataProviderActionInfo>{
            "app": TarDataProvider::AppName,
            "path": "/data/decompress",
            "action": "decompress-data",
            "display_name": "Decompress Data",
            "short_desc": "Decompress tar data",
            "desc": "Decompress an in-memory tar archive and return file contents",
            "action_code": DPAT_API,
        });

        DataProviderActionCatalog::registerAction(<DataProviderActionInfo>{
            "app": TarDataProvider::AppName,
            "path": "/directory/archive",
            "action": "archive-directory",
            "display_name": "Archive Directory",
            "short_desc": "Archive a directory tree",
            "desc": "Create a tar archive from a directory and all its contents",
            "action_code": DPAT_API,
        });

        DataProviderActionCatalog::registerAction(<DataProviderActionInfo>{
            "app": TarDataProvider::AppName,
            "path": "/stream/extract",
            "action": "stream-extract",
            "display_name": "Stream Extract",
            "short_desc": "Stream extract large file from archive",
            "desc": "Extract a large file from an archive using streaming to avoid loading entire file into memory",
            "action_code": DPAT_API,
        });

        DataProviderActionCatalog::registerAction(<DataProviderActionInfo>{
            "app": TarDataProvider::AppName,
            "path": "/entry/delete",
            "action": "delete-entry",
            "display_name": "Delete Entry",
            "short_desc": "Delete file from archive",
            "desc": "Delete a file or directory entry from an existing tar archive",
            "action_code": DPAT_API,
        });

        DataProviderActionCatalog::registerAction(<DataProviderActionInfo>{
            "app": TarDataProvider::AppName,
            "path": "/archive/encrypt",
            "action": "encrypt-archive",
            "display_name": "Encrypt Archive",
            "short_desc": "Encrypt a tar archive",
            "desc": "Encrypt a tar archive with AES-256 encryption",
            "action_code": DPAT_API,
        });

        DataProviderActionCatalog::registerAction(<DataProviderActionInfo>{
            "app": TarDataProvider::AppName,
            "path": "/archive/decrypt",
            "action": "decrypt-archive",
            "display_name": "Decrypt Archive",
            "short_desc": "Decrypt an encrypted tar archive",
            "desc": "Decrypt an AES-256 encrypted tar archive",
            "action_code": DPAT_API,
        });

        DataProviderActionCatalog::registerAction(<DataProviderActionInfo>{
            "app": TarDataProvider::AppName,
            "path": "/archive/split",
            "action": "split-archive",
            "display_name": "Split Archive",
            "short_desc": "Split archive into chunks",
            "desc": "Split a tar archive into multiple smaller chunks for multi-volume storage",
            "action_code": DPAT_API,
        });

        DataProviderActionCatalog::registerAction(<DataProviderActionInfo>{
            "app": TarDataProvider::AppName,
            "path": "/archive/join",
            "action": "join-archive",
            "display_name": "Join Archive Chunks",
            "short_desc": "Join archive chunks",
            "desc": "Join multiple archive chunks back into a single tar archive",
            "action_code": DPAT_API,
        });
    };
}

/** @mainpage TarDataProvider Module

    @tableofcontents

